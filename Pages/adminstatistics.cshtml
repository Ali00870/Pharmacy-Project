@page
@model Pharmacy_back.Pages.adminstatisticsModel
@{
}
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Statistics</title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">

    <!-- Chart.js Library -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

    <!-- Custom CSS -->
    <style>
        .summary-box {
            background-color: #f8f9fa;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            text-align: center;
        }

            .summary-box p {
                font-size: 16px;
                color: #6c757d;
            }

            .summary-box h2 {
                font-size: 32px;
                color: #343a40;
                margin: 10px 0 0;
            }

        .card-title {
            font-size: 18px;
            font-weight: bold;
            margin-bottom: 10px;
        }
    </style>
</head>
<body>
    <div class="container mt-4">
        <div class="row mb-4">
            <!-- Summary Boxes -->
            <div class="col-md-4">
                <div class="summary-box">
                    <p>All Users</p>
                    <h2>300</h2>
                </div>
            </div>
            <div class="col-md-4">
                <div class="summary-box">
                    <p>Customers</p>
                    <h2>280</h2>
                </div>
            </div>
            <div class="col-md-4">
                <div class="summary-box">
                    <p>Pharmacists</p>
                    <h2>20</h2>
                </div>
            </div>
        </div>

        <!-- Row for Charts -->
        <div class="row">
            <div class="col-md-6">
                <div class="card p-3">
                    <h5 class="card-title">Product Sales</h5>
                    <canvas id="salesChart"></canvas>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card p-3">
                    <h5 class="card-title">Products Inventory</h5>
                    <canvas id="inventoryChart"></canvas>
                </div>
            </div>
        </div>

        <div class="row mt-4">
            <div class="col-md-12">
                <div class="card p-3">
                    <h5 class="card-title">Total Units by Month and Manufacturer</h5>
                    <canvas id="unitsChart"></canvas>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Chart.js Data -->
    <script>
        // Product Sales Chart
        const salesCtx = document.getElementById('salesChart').getContext('2d');
        new Chart(salesCtx, {
            type: 'bar',
            data: {
                labels: ['Sept 2024', 'Oct 2024', 'Nov 2024'],
                datasets: [
                    {
                        label: 'HealthCare',
                        data: [300, 400, 350],
                        backgroundColor: 'rgba(33, 150, 243, 0.6)',
                    },
                    {
                        label: 'Medicine',
                        data: [250, 300, 270],
                        backgroundColor: 'rgba(255, 193, 7, 0.6)',
                    },
                ],
            },
            options: {
                responsive: true,
                plugins: {
                    legend: { display: true, position: 'top' },
                },
            },
        });

        // Products Inventory Pie Chart
        const inventoryCtx = document.getElementById('inventoryChart').getContext('2d');
        new Chart(inventoryCtx, {
            type: 'pie',
            data: {
                labels: ['Expired', 'Out of Stock', 'Total Stock'],
                datasets: [
                    {
                        data: [10, 25, 65],
                        backgroundColor: ['#ff5252', '#ffca28', '#66bb6a'],
                    },
                ],
            },
            options: {
                responsive: true,
                plugins: {
                    legend: { display: true, position: 'top' },
                },
            },
        });

        // Total Units by Month and Manufacturer Line Chart
        const unitsCtx = document.getElementById('unitsChart').getContext('2d');
        new Chart(unitsCtx, {
            type: 'line',
            data: {
                labels: [
                    'Jan 14',
                    'Feb 14',
                    'Mar 14',
                    'Apr 14',
                    'May 14',
                    'Jun 14',
                    'Jul 14',
                    'Aug 14',
                    'Sep 14',
                    'Oct 14',
                    'Nov 14',
                    'Dec 14',
                ],
                datasets: [
                    {
                        label: 'Aliqui',
                        data: [500, 600, 700, 800, 900, 1100, 1200, 1000, 950, 850, 750, 650],
                        borderColor: '#1e88e5',
                        backgroundColor: 'rgba(33, 150, 243, 0.3)',
                    },
                    {
                        label: 'Natura',
                        data: [300, 400, 450, 550, 600, 700, 800, 850, 950, 1000, 1100, 1200],
                        borderColor: '#ffca28',
                        backgroundColor: 'rgba(255, 193, 7, 0.3)',
                    },
                    {
                        label: 'Plum',
                        data: [200, 250, 300, 350, 400, 450, 500, 600, 700, 750, 850, 950],
                        borderColor: '#66bb6a',
                        backgroundColor: 'rgba(102, 187, 106, 0.3)',
                    },
                    {
                        label: 'VanArdel',
                        data: [400, 500, 550, 600, 650, 700, 750, 800, 850, 900, 1000, 1100],
                        borderColor: '#ab47bc',
                        backgroundColor: 'rgba(171, 71, 188, 0.3)',
                    },
                ],
            },
            options: {
                responsive: true,
                plugins: {
                    legend: { display: true, position: 'top' },
                },
            },
        });
    </script>
</body>
