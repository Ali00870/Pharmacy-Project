                    </form>
                </td>

                
                <td>
                    <form method="post" asp-page-handler="Delete">
                        <input type="hidden" name="ID" value="@Model.table.Rows[i]["id"]" />
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
