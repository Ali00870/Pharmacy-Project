            <tr>
                @for (int j = 0; j < Model.table.Columns.Count; j++)
                {
                    <td>@Model.table.Rows[i][j]</td>
                }

                
                <td>
                    <form method="post" asp-page-handler="Edit">
                        <input type="hidden" name="ID" value="@Model.table.Rows[i]["id"]" />
