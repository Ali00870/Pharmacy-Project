@page
@model Pharmacy_back.Pages.Order_DetailsModel
@{
    ViewData["Title"] = "Order_Details";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Order Details</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f7f8fc;
            padding: 20px;
        }

        .checkout .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 20px;
            background: #ffffff;
            border-radius: 10px;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
        }

        .address h2,
        .order-summary h1 {
            color: #333;
            margin-bottom: 20px;
        }

        .inputs label {
            font-weight: bold;
            color: #555;
        }

        .inputs input,
        .inputs select {
            width: 100%;
            padding: 10px;
            margin-bottom: 15px;
            border: 1px solid #ddd;
            border-radius: 5px;
            transition: border-color 0.3s ease, box-shadow 0.3s ease;
        }

            .inputs input:focus,
            .inputs select:focus {
                border-color: #ffa500;
                box-shadow: 0px 0px 5px rgba(255, 165, 0, 0.8);
                outline: none;
            }

        .order-btn button {
            width: 100%;
            padding: 15px;
            font-size: 16px;
            font-weight: bold;
            color: #fff;
            background-color: #ffa500;
            border: none;
            border-radius: 5px;
            transition: background-color 0.3s ease, transform 0.2s ease;
        }

            .order-btn button:hover {
                background-color: #e59400;
                transform: scale(1.05);
            }

        .order-summary .order-summary-item {
            display: flex;
            align-items: center;
            margin-bottom: 20px;
            background: #f9f9f9;
            padding: 10px;
            border-radius: 5px;
        }

            .order-summary .order-summary-item img {
                width: 80px;
                height: 80px;
                object-fit: cover;
                margin-right: 15px;
                border-radius: 5px;
            }

        .order-summary .content {
            flex-grow: 1;
        }

            .order-summary .content h4 {
                margin: 0;
                font-size: 16px;
                color: #333;
            }

            .order-summary .content p {
                margin: 5px 0;
                color: #777;
            }

        .total {
            text-align: right;
            font-size: 18px;
            font-weight: bold;
            margin-top: 20px;
        }

        /* Center the "Add Another Item" button below the container */
        .add-item-btn {
            text-align: center;
            margin-top: 20px;
        }

            .add-item-btn button {
                background-color: #ffa500;
                color: white;
                font-size: 16px;
                padding: 10px 20px;
                border: none;
                border-radius: 5px;
                transition: background-color 0.3s ease, transform 0.2s ease;
            }

                .add-item-btn button:hover {
                    background-color: #e59400;
                    transform: scale(1.05);
                }
    </style>
</head>
<body>

    <!-- Start Checkout -->
    <section class="checkout">
        <div class="container">
           @*  <form method="post">
                <div class="address">
                    <h2>Delivery Address</h2>

                    <div class="inputs">
                       @*  <div>
                            <label for="name">Name</label>
                            <input type="text" asp-for="@Model.username" placeholder="Enter Your Name" />
                        </div> *@

                       @*  <div>
                            <label for="Pharmacy">Pharmacy</label>
                            <select asp-for="SelectedItem" asp-items="Model.Items">
                                <option value="">Select an option</option>
                            </select>
                            <span class="text-danger">@Model.SelectMsg</span>



                        </div>
                    </div>
                    <div class="order-btn">
                        <button type="submit">Order</button>
                    </div>
                </div>
            </form> *@
            <form method="post" id="orderForm">
                <div class="address">
                    <div class="inputs">
                        <div>
                            <label for="Pharmacy">Pharmacy</label>
                            <select asp-for="SelectedItem" asp-items="Model.Items">
                                <option value="">Select an option</option>
                            </select>
                            <span class="text-danger">@Model.SelectMsg</span>
                        </div>
                    </div>
                    <div class="order-btn">
                        <button type="button" id="confirmOrderBtn">Order</button>
                    </div>
                </div>
            </form>

            <!-- Confirmation Modal -->
            <div id="confirmationModal" style="display: none;">
                <div class="modal-content">
                    <h2>Confirm Order</h2>
                    <p>Are you sure you want to place this order?</p>
                    <div class="modal-buttons">
                        <button type="button" id="confirmYes">Yes</button>
                        <button type="button" id="confirmNo">No</button>
                    </div>
                </div>
            </div>

           


            <div class="order-summary">
                <h1>Order Summary</h1>
                @foreach (var M in Model.Medicines)
                {
                    <div class="order-summary-item">
                        <img src="@M.img" alt="Product">
                        <div class="content">
                            <h4>@M.Name</h4>
                            <p class="order-summary-price">Price: <span>@M.Price</span></p>
                            <p class="order-summary-price">Quantity: <span>@M.Quantity</span></p>
                        </div>
                        <form method="post" asp-page-handler="DeleteMedicine">
                            <input type="hidden" name="id" value="@M.Id" />
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </form>
                    </div>
                }

                @foreach (var C in Model.Cosmetics)
                {
                    <div class="order-summary-item">
                        <img src="@C.img" alt="Product">
                        <div class="content">
                            <h4>@C.Name</h4>
                            <p class="order-summary-price">Price: <span>@C.Price</span></p>
                            <p class="order-summary-price">Quantity: <span>@C.Quantity</span></p>
                        </div>
                        <form method="post" asp-page-handler="DeleteCosmetic">
                            <input type="hidden" name="id" value="@C.Id" />
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </form>
                    </div>
                }

                <div class="total">
                    <p>Total</p>
                    <span>@Model.HttpContext.Session.GetString("totalPrice")</span>
                </div>
            </div>

        </div>

        <div class="add-item-btn">
            <form method="post" asp-page-handler="AnotherItem">
                <button type="submit">Add Another Item</button>
            </form>
        </div>
        
    </section>
    <h2>@Model.orderMessage</h2>
    <style>
        /* Simple styling for the modal */
        #confirmationModal {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.5);
            display: flex;
            justify-content: center;
            align-items: center;
            z-index: 1000;
        }

        .modal-content {
            background: #fff;
            padding: 20px;
            border-radius: 5px;
            text-align: center;
        }

        .modal-buttons button {
            margin: 10px;
            padding: 10px 20px;
            border: none;
            border-radius: 3px;
            cursor: pointer;
        }

            .modal-buttons button#confirmYes {
                background-color: green;
                color: white;
            }

            .modal-buttons button#confirmNo {
                background-color: red;
                color: white;
            }
    </style>

    <script>
        // JavaScript to handle confirmation
        document.getElementById("confirmOrderBtn").addEventListener("click", function () {
            document.getElementById("confirmationModal").style.display = "flex";
        });

        document.getElementById("confirmYes").addEventListener("click", function () {
            // Submit the form
            document.getElementById("orderForm").submit();
        });

        document.getElementById("confirmNo").addEventListener("click", function () {
            // Hide the confirmation modal
            document.getElementById("confirmationModal").style.display = "none";
        });
    </script>
    <script src="./js/swiper-bundle.min.js"></script>
    <script src="./js/swiper.js"></script>
    <script src="./js/fetchProducts.js"></script>
    <script src="./js/main.js"></script>
</body>
