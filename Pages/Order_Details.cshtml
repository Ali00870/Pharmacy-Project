@page
@model Pharmacy_back.Pages.Order_DetailsModel
@{
}

<body>

<!-- Start Checkout -->
<section class="checkout">
    <div class="container">
        <form action="">
            <div class="address">
                <h2>Delivery Address</h2>

                <div class="inputs">
                    <div>
                        <label for="email">Email</label>
                        <input type="email" id="email" placeholder="Enter Your Email" />
                    </div>

                    <div>
                        <label for="name">Name</label>
                        <input type="text" id="name" placeholder="Enter Your Name" />
                    </div>

                    <div>
                        <label for="address">Address</label>
                        <input type="text" id="address" placeholder="Enter Your Address" />
                    </div>

                    <div>
                        <label for="phone">Phone</label>
                        <input type="number" id="phone" placeholder="Enter Your Phone" />
                    </div>
                </div>
            </div>

        </form>

        <div class="order-summary">
            <h1>Order Summary</h1>

            <div class="order-summary-items">
                <div class="order-summary-item">
                    <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcQsrR7Ag3A_mTMqSVbAwzGiBg-tjGlmFfwTAw&s" alt="Product">

                    <div class="content">
                        <h4>
                            Original Medicine
                        </h4>

                        <p class="order-summary-price">Price: <span>$100</span></p>
                    </div>
                </div>

                <div class="order-summary-item">
                    <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcRQm0CuX1dtuZrKY_gVMo8rzmMktR85hfy0JQ&s" alt="Product">

                    <div class="content">
                        <h4>
                            Original Medicine
                        </h4>

                        <p class="order-summary-price">Price: <span>$150</span></p>
                    </div>
                </div>

                <div class="total">
                    <p>Total</p>
                    <span>$250</span>
                </div>

                <div class="order-btn">
                    <button>Order</button>
                </div>
            </div>
        </div>
    </div>
    </div>
</section>
</body>
<script src="./js/swiper-bundle.min.js"></script>
<script src="./js/swiper.js"></script>
<script src="./js/fetchProducts.js"></script>
<script src="./js/main.js"></script>