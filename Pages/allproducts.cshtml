<!-- Start All Products Content -->

<div class="top-page">
    <div class="container">
        <h1>Experiance of Future  With Sydality</h1>

    </div>
</div>

<div class="all-products">
    <div class="container">

        <div class="filter-btn">
            Filter <i class="fa-solid fa-filter"></i>
        </div>

        <div class="filter">
            <h2>Filter</h2>

            <div class="filter-items">
                <h4>Categories</h4>
                <div class="content">
