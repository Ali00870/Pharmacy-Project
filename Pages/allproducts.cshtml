                        <span>Hair Care</span>
                        <input type="checkbox" />
                    </div>

                    <div class="filter-item">
                        <span>Skin Care</span>
                        <input type="checkbox" />
                    </div>

                    <div class="filter-item">
                        <span>Vitamins & Supplements</span>
                        <input type="checkbox" />
                    </div>

                    <div class="filter-item">
                        <span>Pain Relief</span>
                        <input type="checkbox" />
                    </div>

                    <div class="filter-item">
                        <span>Cold & Flu</span>
                        <input type="checkbox" />
                    </div>

                    <div class="filter-item">
                        <span>First Aid</span>
                        <input type="checkbox" />
                    </div>
                </div>
            </div>



            <div class="filter-items">
                <h4>Form</h4>
                <div class="content">
                    <div class="filter-item">
                        <span>Tablets</span>
                        <input type="checkbox" />
                    </div>

                    <div class="filter-item">
                        <span>Capsules</span>
                        <input type="checkbox" />
                    </div>

                    <div class="filter-item">
                        <span>Ointments</span>
                        <input type="checkbox" />
                    </div>

                    <div class="filter-item">
                        <span>Liquids</span>
                        <input type="checkbox" />
                    </div>

                    <div class="filter-item">
                        <span>Patches</span>
                        <input type="checkbox" />
                    </div>
                </div>
            </div>

            <div class="filter-items">
                <h4>Price Range</h4>
                <div class="content">
                    <input type="range" min="1" max="100" step="1" />
                    <p>Price: $<span id="price-range">50</span></p>
                </div>
            </div>
        </div>

        <div class="products"></div>
    </div>
</div>

<div class="pagination">
    <span class="btn-change prev">
        <i class="fa-solid fa-arrow-left"></i>
    </span>
    <span class="page-num active">1</span>
    <span class="page-num">2</span>
