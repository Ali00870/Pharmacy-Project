@page
@model Pharmacy_back.Pages.UsersModel
@{
}

<body>

<!-- Users Data Table -->
<div class="table-responsive user-data-table">
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Username</th>
                <th>E-mail</th>
                <th>Address</th>
            </tr>
        </thead>
        <tbody>
                @for (int i = 0; i < Model.userdata.Rows.Count; i++)

                {<tr>
                <td>@Model.userdata.Rows[i][0]</td>
                <td>@Model.userdata.Rows[i][1]</td>
                        <td>@Model.userdata.Rows[i][2]</td>
                        <td><form method="post" asp-page-handler="Delete">
                                <input type="hidden" name="c_username" value="@Model.userdata.Rows[i][0]" />
                            <button type="submit" class="btn btn-danger">Delete</button>
                            </form>
                        </td>
            </tr>
            }
        </tbody>
    </table>
</div>

<!-- Bootstrap Bundle with Popper -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>