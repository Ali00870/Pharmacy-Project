@page
@model Pharmacy_back.Pages.UsersModel
@{
}

<body>
<!-- Search and Filter Section -->
<div class="row mb-4">
    <div class="col-md-6">
        <input type="text" class="form-control bg-dark text-white border-0" placeholder="Search">
    </div>
    <div class="col-md-6 text-end">
        <select class="form-select bg-dark text-white border-0">
            <option selected>Browse</option>
            <option value="1">Option 1</option>
            <option value="2">Option 2</option>
        </select>
    </div>
</div>

<!-- Users Data Table -->
<div class="table-responsive user-data-table">
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Username</th>
                <th>E-mail</th>
                <th>Phone number</th>
                <th>Address</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>Value 1</td>
                <td>value2@example.com</td>
                <td>123456789</td>
                <td>Value 3</td>
            </tr>
            <tr>
                <td>Value 4</td>
                <td>value5@example.com</td>
                <td>987654321</td>
                <td>Value 6</td>
            </tr>
            <tr>
                <td>Value 7</td>
                <td>value8@example.com</td>
                <td>456123789</td>
                <td>Value 9</td>
            </tr>
            <tr>
                <td>Value 10</td>
                <td>value11@example.com</td>
                <td>321654987</td>
                <td>Value 12</td>
            </tr>
        </tbody>
    </table>
</div>

<!-- Actions -->
<div class="row">
    <div class="col-md-6">
        <div class="actions">
            <button class="btn">Add User</button>
            <button class="btn">Block User</button>
        </div>
    </div>
    <div class="col-md-6 text-end">
        <div>
            <h5>Users</h5>
            <!-- Placeholder for Pie Chart -->
            <canvas id="userPieChart" class="pie-chart"></canvas>
        </div>
    </div>
</div>
  </div>

<!-- Bootstrap Bundle with Popper -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<!-- Chart.js for Pie Chart -->
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    // Pie Chart Data and Config
    const ctx = document.getElementById('userPieChart').getContext('2d');
    const userPieChart = new Chart(ctx, {
        type: 'pie',
        data: {
            labels: ['Active Users', 'Blocked Users'],
            datasets: [{
                data: [80, 20],
                backgroundColor: ['#4caf50', '#f44336'],
            }]
        },
        options: {
            responsive: true,
            plugins: {
                legend: {
                    position: 'bottom',
                    labels: {
                        color: '#ffffff'
                    }
                },
            },
        },
    });
</script>
</body>