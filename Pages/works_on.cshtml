@page
@model Pharmacy_back.Pages.works_onModel
@{
}
<div class="container mt-4">
    @if (Model.IsEditMode)
    {
        <h3 class="text-center">Edit Pharmacist</h3>
        <form method="post" asp-page-handler="EditPharmacist">
            <!-- Pharmacist Username (Readonly or Editable) -->
            <div class="form-group">
                <label for="Username">Pharmacist Username</label>
                <input type="text" id="Username" name="Username" class="form-control" asp-for="pusername" readonly />
            </div>

            <!-- Editable Fields -->
            <div class="form-group">
                <label for="ShiftHours">Shift Hours</label>
                <input type="number" id="ShiftHours" name="shift" class="form-control" asp-for="shift" required />
            </div>
            <div class="form-group">
                <label for="Salary">Salary</label>
                <input type="number" id="Salary" name="salary" class="form-control" asp-for="salary" required />
            </div>

            <!-- Submit Button -->
            <div class="text-center mt-3">
                <button type="submit" class="btn btn-primary">Save Changes</button>
            </div>
        </form>
    }
    else
    {
        <h3 class="text-center">Add a Pharmacist</h3>
        <form method="post" asp-page-handler="AddPharmacist">
            <div class="form-group">
                <label for="Username">Pharmacist Username</label>
                <input type="text" id="Username" name="Username" class="form-control" asp-for="pusername" placeholder="Enter username" required />
            </div>
            <div class="form-group">
                <label for="name">Pharmacist Name</label>
                <input type="text" id="name" name="name" class="form-control" asp-for="name" placeholder="Enter name" required />
            </div>
            <div class="form-group">
                <label for="name">Pharmacist password</label>
                <input type="text" id="name" name="name" class="form-control" asp-for="password" placeholder="Enter Password" required />
            </div>

            <div class="form-group">
                <label for="ShiftHours">Shift Hours</label>
                <input type="number" id="ShiftHours" name="shift" class="form-control" asp-for="shift" placeholder="Enter shift hours" required />
            </div>
            <div class="form-group">
                <label for="Salary">Salary</label>
                <input type="number" id="Salary" name="salary" class="form-control" asp-for="salary" placeholder="Enter salary" required />
            </div>

            <!-- Submit Button -->
            <div class="text-center mt-3">
                <button type="submit" class="btn btn-primary">Add Pharmacist</button>
            </div>
        </form>
    }
</div>




<!-- Bootstrap Bundle with Popper -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>