<body>
<div class="cart">
    <div class="top-cart">
        <h3>My Cart <span class="cart-total-count">(0 Items in Cart)</span></h3>
        <span class="close-cart">
            <i class="fa-regular fa-circle-xmark"></i>
        </span>
    </div>
        @{
            bool showAddItemButton = !string.IsNullOrEmpty(Request.Query["showAddItem"]);
        }



        <div class="login-signup">
            <a asp-page="signin">Login <i class="fa-solid fa-right-to-bracket"></i></a>
            <a asp-page="/register">Sign Up <i class="fa-solid fa-user-plus"></i></a>
        </div>
        <div class="cart-items"></div>

