<section class="medicine-section">
    <div class="container">
        <div class="medicine-section-content">
            <div class="medicine-section-main-content mySwiper">
                <div class="main-title" id="med">
                        <h2><span>Best Selling Medicine </span></h2>
                </div>
                <div class="product">
                    <div class="card-container">
                        @foreach (DataRow row in @Model.BestMed.Rows)
                        {
                            <div class="card">
                                    
                                    <form class="card" method="post" asp-route-id="@row["Product_id"]">
                                <h3>@row["name"]</h3>
                                <p class="price">$@row["price"]</p>

                                    <button type="submit" style="padding: 10px 15px; background-color: #28a745; color: white; border: none; border-radius: 4px; cursor: pointer;">
                                    Add to Cart
                                </button>
                                    </form>
                            </div>
                        }
                        </div>

                </div>
                    
