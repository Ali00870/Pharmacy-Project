@model Pharmacy_back.Pages.Add_itemModel
@{
}
<body>
 <div class="mb-3">
          <label for="itemId" class="form-label">ID</label>
          <input type="text" class="form-control" id="itemId" placeholder="00000000">
        </div>

        <div class="mb-3">
          <label for="itemPrice" class="form-label">Price</label>
          <input type="text" class="form-control" id="itemPrice" placeholder="000">
        </div>

        <div class="mb-3">
          <label for="itemName" class="form-label">Name</label>
          <input type="text" class="form-control" id="itemName" placeholder="Test">
        </div>

        <div class="mb-3">
          <label for="itemQuantity" class="form-label">Quantity</label>
          <input type="number" class="form-control" id="itemQuantity" placeholder="0">
        </div>

        <div class="mb-3">
          <label for="itemManufacturer" class="form-label">Manufacturer</label>
          <input type="text" class="form-control" id="itemManufacturer" placeholder="CIE206">
        </div>

        <div class="mb-3">
          <label for="itemDosage" class="form-label">Dosage</label>
          <input type="text" class="form-control" id="itemDosage" placeholder="One tablet per day">
        </div>

        <div class="mb-3">
          <label for="itemIngredients" class="form-label">Active Ingredient(s)</label>
          <input type="text" class="form-control" id="itemIngredients" placeholder="500mg Paracetamol">
        </div>

        <div class="mb-3">
          <label for="itemForm" class="form-label">Form</label>
          <input type="text" class="form-control" id="itemForm" placeholder="Tablets">
        </div>

        <div class="d-flex justify-content-between">
          <button type="submit" class="btn btn-blue">Save Item</button>
          <button type="reset" class="btn btn-danger">Cancel</button>
          <button type="button" class="btn btn-secondary">Add Another Form</button>
        </div>
     
   

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>