@page
@model Pharmacy_back.Pages.follow_orderModel
@{}
    <!DOCTYPE html>
    <html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Order Details</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
        <style>
            /* Custom smooth theme */
            body {
                background-color: #f7f8fc;
                font-family: 'Arial', sans-serif;
            }

            .card {
                background-color: #ffffff;
                box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
                border-radius: 8px;
            }

            table {
                background-color: #fffafa;
                border-collapse: collapse;
                width: 100%;
                margin-left: -50px; /* Shift the table to the left */
            }

            th {
                background-color: #007bff; /* Custom Blue */
                color: white;
                text-align: center;
                padding: 12px;
            }

            td {
                padding: 10px;
                border: 1px solid #ddd;
                text-align: center;
            }

            tr:hover {
                background-color: #f1f1f1; /* Hover effect for rows */
            }

            .table-container {
                margin: 0 auto; /* Center the container */
                padding: 20px;
                max-width: 1000px;
            }

            .badge {
                font-size: 1rem;
                padding: 5px 10px;
            }
            /* Custom black borders for the second table */
            .product-table th, .product-table td {
                border: 1px solid black; /* Set border color to black */
            }
            /* Make the header text black in the second table */
            .product-table th {
                color: black; /* Set the text color to black for headers in the second table */
            }
            /* Change the background color of Order Information to Yellow */
            .card-header {
                background-color: #ffa500; /* Set background color to yellow */
                color: black; /* Set text color to black for readability */
            }
        </style>
    </head>
    <body>
        <div class="container mt-5">
            <h1 class="text-center mb-4">Order Details</h1>

            <div class="card shadow-lg">
                <div class="card-header">
                    <h3>Order Information</h3>
                </div>
                <div class="card-body">
                    <!-- Table with order details -->
                    <div class="table-container">
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>Field</th>
                                    <th>Details</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td><strong>Pharmacy Name:</strong></td>
                                    <td>@Model.pharmacyname</td>
                                </tr>
                                <tr>
                                    <td><strong>Pharmacy Location:</strong></td>
                                    <td>@Model.pharmacylocation</td>
                                </tr>
                                <tr>
                                    <td><strong>Customer Username:</strong></td>
                                    <td>@Model.c_username</td>
                                </tr>
                                <tr>
                                    <td><strong>Order Status:</strong></td>
                                    <td><span class="badge bg-success">@Model.orderstatus</span></td>
                                </tr>
                                <tr>
                                    <td><strong>Order Date:</strong></td>
                                    <td>@Model.orderdate</td>
                                </tr>
                                    <tr>
                                    <td><strong>Delivery Man Contact:</strong></td>
                                        <td>
                                        01156585658

                                        01025689745
                                        </td>
                                    </tr>
                                
                            </tbody>
                        </table>

                        <!-- Table with product details (with black borders) -->
                        <p> Total Price is: @Model.totalprice </p>

                        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
    </body>
    </html>
